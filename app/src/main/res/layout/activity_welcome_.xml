<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.getitdone.Welcome_Activity">

    <TextView
        android:layout_width="171dp"
        android:layout_height="62dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Most Recent Task"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/taskListBttn"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="132dp"
        android:layout_height="88dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="20dp"
        android:onClick="goToCreateTask"
        android:text="Add New Task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/taskListBttn"
        android:layout_width="132dp"
        android:layout_height="88dp"
        android:onClick="goToTaskList"
        android:text="View To-Do list"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button2" />

</android.support.constraint.ConstraintLayout>
