<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="getTask">

    <TextView
        android:id="@+id/taskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:maxHeight="32dp"
        android:maxLines="1"
        android:maxWidth="420dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/background_dark"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TaskName" />

    <TextView
        android:id="@+id/taskDetails"
        android:layout_width="159dp"
        android:layout_height="41dp"
        android:textAlignment="textStart"
        tools:text="Details"
        app:layout_constraintLeft_toRightOf="@+id/taskCategory"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/taskCompleteCheckBox" />

    <CheckBox
        android:id="@+id/taskCompleteCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:fontFamily="sans-serif"
        android:text="Task Complete"
        android:textColorLink="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/taskName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskCategory"
        android:layout_width="222dp"
        android:layout_height="41dp"
        android:text="TextView"
        android:textSize="18sp"
        tools:text="Category"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/taskName"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>