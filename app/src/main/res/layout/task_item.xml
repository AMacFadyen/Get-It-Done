<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/taskName"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TaskName" />

    <TextView
        android:id="@+id/taskDetails"
        android:layout_width="159dp"
        android:layout_height="41dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskName"
        tools:text="Details" />

    <CheckBox
        android:id="@+id/taskCompleteCheckBox"
        android:layout_width="132dp"
        android:layout_height="31dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:text="Task Complete"
        app:layout_constraintLeft_toRightOf="@+id/taskName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskCategory"
        android:layout_width="94dp"
        android:layout_height="32dp"
        android:text="TextView"
        tools:text="Category"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/taskCompleteCheckBox"
        app:layout_constraintLeft_toRightOf="@+id/taskDetails"
        android:layout_marginLeft="25dp" />
</android.support.constraint.ConstraintLayout>